---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Página não encontrada - Caio Leta">
  <section class="max-w-3xl mx-auto px-6 pt-16 md:pt-24 pb-20 text-center">
    <div class="fade-in">
      <h1 class="font-serif text-6xl md:text-8xl font-bold mb-6 text-primary/20 dark:text-dark-text/20">404</h1>
      <p class="text-lg text-primary/60 dark:text-dark-text/60 mb-8">
        Esta página não existe ou foi movida.
      </p>
      <a
        href="/"
        class="inline-block px-6 py-3 bg-accent text-white rounded-lg hover:opacity-90 transition-opacity text-sm font-medium"
      >
        Voltar ao início
      </a>
    </div>
  </section>
</BaseLayout>
