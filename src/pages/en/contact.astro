---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { t } from '../../i18n/utils';

const locale = 'en' as const;
---

<BaseLayout title={t(locale, 'contact.title')} description={t(locale, 'contact.metaDescription')}>
  <section class="max-w-3xl mx-auto px-6 pt-16 md:pt-24 pb-20">
    <div class="fade-in">
      <h1 class="font-serif text-3xl md:text-4xl font-bold mb-4">{t(locale, 'contact.heading')}</h1>
      <p class="text-primary/50 dark:text-dark-text/50 mb-12 max-w-lg">
        {t(locale, 'contact.subtitle')}
      </p>
    </div>

    <div class="fade-in space-y-8">
      <div>
        <h2 class="font-serif text-xl font-semibold mb-3">{t(locale, 'contact.email')}</h2>
        <ul class="space-y-3">
          <li>
            <a
              href="mailto:caioleta@gmail.com"
              class="text-accent dark:text-blue-400 hover:opacity-70 transition-opacity"
            >
              caioleta@gmail.com
            </a>
          </li>
          <li>
            <a
              href="mailto:explicabitcoin@gmail.com"
              class="text-accent dark:text-blue-400 hover:opacity-70 transition-opacity"
            >
              explicabitcoin@gmail.com
            </a>
          </li>
        </ul>
      </div>

      <div>
        <h2 class="font-serif text-xl font-semibold mb-3">{t(locale, 'contact.social')}</h2>
        <ul class="space-y-3">
          <li>
            <a
              href="https://twitter.com/BitcoinExplica"
              target="_blank"
              rel="noopener noreferrer"
              class="text-accent dark:text-blue-400 hover:opacity-70 transition-opacity"
            >
              X / Twitter
            </a>
          </li>
        </ul>
      </div>
    </div>
  </section>
</BaseLayout>
