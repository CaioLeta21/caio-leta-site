  },
  {
    titulo: "Bitcoin and Geopolitics",
    evento: "Accelerating Bitcoin (Paraguay, 2026)",
    tipo: "Lecture",
    link: null,
  },
  {
    titulo: "Bitcoin Adoption",
    evento: "Satsconf 2024",
    tipo: "Lecture",
    link: "https://www.youtube.com/watch?v=EADaXvHPmHY",
  },
  {
    titulo: "Bitcoin Spring Fest",
    evento: "Bitcoin Spring Fest (Rolante, 2023)",
    tipo: "Lecture",
    link: "https://www.youtube.com/watch?v=PN_7amjZzGQ",
  },
  {
    titulo: "Bitcoin Mining Module",
    evento: "Brasil Paralelo Official Bitcoin Certification",
    tipo: "Course",
    link: null,
  },
];

const paineis = [
  {
    titulo: "Bitcoin Mining",
    evento: "Satsconf 2024",
    tipo: "Panel moderation",
    link: "https://www.youtube.com/watch?v=4K1O7UhBNsc",
  },
  {
    titulo: "Bitcoin Adoption",
    evento: "Satsconf 2024",
    tipo: "Panel moderation",
    link: "https://www.youtube.com/watch?v=8XliLvb050Q",
  },
  {
    titulo: "On-Chain Analysis",
    evento: "Satsconf 2024",
    tipo: "Panel moderation",
    link: "https://www.youtube.com/watch?v=_r1c3QK7Mog",
  },
  {
    titulo: "Bitcoin Mining",
    evento: "Satsconf 2023",
    tipo: "Panel moderation",
    link: "https://www.youtube.com/watch?v=sBuu9F-Z6mw",
  },
  {
    titulo: "Closing Firechat with Rapha Zagury",
    evento: "Satsconf 2023",
    tipo: "Conversation",
    link: "https://www.youtube.com/watch?v=hOkDXlzznuY",
  },
  {
    titulo: "Bitcoin Mining",
    evento: "Satsconf 2022",
    tipo: "Panel moderation",
    link: "https://www.youtube.com/watch?v=EFTMkLIeFjE",
  },
];

const podcasts = [
  {
    nome: "Explica Bitcoin",
    descricao: "Personal project with 100+ episodes about Bitcoin",
    link: "https://www.youtube.com/@ExplicaBitcoin",
  },
  {
    nome: "Bipa Podcast",
    descricao: "50+ episodes, one of the largest bitcoin-only podcasts in Brazil (2024-2025)",
    link: "https://www.youtube.com/@usebipa/podcasts",
  },
  {
    nome: "Arthur Mining Podcast",
    descricao: "20+ episodes on bitcoin mining and energy",
    link: "https://www.youtube.com/@arthurmining/videos",
  },
];

const publicacoes = [
  {
    nome: "Bitcoin Magazine",
    descricao: "Articles in English about Bitcoin",
    link: "https://bitcoinmagazine.com/authors/pudim",
  },
  {
    nome: "Livecoins",
    descricao: "Regular column in Brazil's leading bitcoin-only portal (since 2021)",
    link: "https://livecoins.com.br/author/pudim/",
  },
  {
    nome: "O Mundo Mágico do Bitcoin",
    descricao: "Book about the first year studying Bitcoin and the lessons learned",
    link: "https://drive.google.com/file/d/15r4x_vUcP-kozUVnSWczcf7CJCmZ91cf/view?usp=sharing",
  },
];
---

<BaseLayout title={t(locale, 'appearances.title')} description={t(locale, 'appearances.metaDescription')}>
  <section class="max-w-3xl mx-auto px-6 pt-16 md:pt-24 pb-20">
    <div class="fade-in">
      <h1 class="font-serif text-3xl md:text-4xl font-bold mb-4">{t(locale, 'appearances.heading')}</h1>
      <p class="text-primary/50 dark:text-dark-text/50 mb-12">
        {t(locale, 'appearances.subtitle')}
      </p>
    </div>

    <!-- Lectures -->
    <div class="fade-in mb-14">
      <h2 class="font-serif text-2xl font-semibold mb-6">{t(locale, 'appearances.lectures')}</h2>
      <div class="space-y-4">
        {palestras.map(item => (
          <div class="py-4 border-b border-gray-200 dark:border-gray-800">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-1">
              <div>
                <h3 class="font-medium">{item.titulo}</h3>
                <p class="text-sm text-primary/50 dark:text-dark-text/50">{item.evento}</p>
              </div>
              {item.link && (
                <a
                  href={item.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm text-accent dark:text-blue-400 hover:opacity-70 transition-opacity shrink-0"
                >
                  {t(locale, 'appearances.watch')} &rarr;
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Panels -->
    <div class="fade-in mb-14">
      <h2 class="font-serif text-2xl font-semibold mb-6">{t(locale, 'appearances.panels')}</h2>
      <div class="space-y-4">
        {paineis.map(item => (
          <div class="py-4 border-b border-gray-200 dark:border-gray-800">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-1">
              <div>
                <h3 class="font-medium">{item.titulo}</h3>
                <p class="text-sm text-primary/50 dark:text-dark-text/50">{item.tipo} · {item.evento}</p>
              </div>
              {item.link && (
                <a
                  href={item.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm text-accent dark:text-blue-400 hover:opacity-70 transition-opacity shrink-0"
                >
                  {t(locale, 'appearances.watch')} &rarr;
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Podcasts -->
    <div class="fade-in mb-14">
      <h2 class="font-serif text-2xl font-semibold mb-6">{t(locale, 'appearances.podcasts')}</h2>
      <div class="space-y-4">
        {podcasts.map(item => (
          <div class="py-4 border-b border-gray-200 dark:border-gray-800">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-1">
              <div>
                <h3 class="font-medium">{item.nome}</h3>
                <p class="text-sm text-primary/50 dark:text-dark-text/50">{item.descricao}</p>
              </div>
              <a
                href={item.link}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-accent dark:text-blue-400 hover:opacity-70 transition-opacity shrink-0"
              >
                {t(locale, 'appearances.viewChannel')} &rarr;
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Publications -->
    <div class="fade-in mb-14">
      <h2 class="font-serif text-2xl font-semibold mb-6">{t(locale, 'appearances.publications')}</h2>
      <div class="space-y-4">
        {publicacoes.map(item => (
          <div class="py-4 border-b border-gray-200 dark:border-gray-800">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-1">
              <div>
                <h3 class="font-medium">{item.nome}</h3>
                <p class="text-sm text-primary/50 dark:text-dark-text/50">{item.descricao}</p>
              </div>
              {item.link && (
                <a
                  href={item.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm text-accent dark:text-blue-400 hover:opacity-70 transition-opacity shrink-0"
                >
                  {t(locale, 'appearances.view')} &rarr;
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
