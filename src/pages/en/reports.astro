<BaseLayout title={t(locale, 'reports.title')} description={t(locale, 'reports.metaDescription')}>
  <section class="max-w-3xl mx-auto px-6 pt-16 md:pt-24 pb-20">
    <div class="fade-in">
      <h1 class="font-serif text-3xl md:text-4xl font-bold mb-4">{t(locale, 'reports.heading')}</h1>
      <p class="text-primary/50 dark:text-dark-text/50 mb-12">
        {t(locale, 'reports.subtitle')}
      </p>
    </div>

    <div class="fade-in">
      <div class="space-y-4">
        {relatorios.map(item => (
          <div class="py-4 border-b border-gray-200 dark:border-gray-800">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-1">
              <h3 class="font-medium">{item.titulo}</h3>
              <div class="flex items-center gap-4 shrink-0">
                <span class="text-sm text-primary/40 dark:text-dark-text/40">{formatMonthYear(item.data, locale)}</span>
                <a
                  href={`https://drive.google.com/file/d/${item.fileId}/view`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm text-accent dark:text-blue-400 hover:opacity-70 transition-opacity"
                >
                  {t(locale, 'reports.download')} &rarr;
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Geology -->
    <div class="fade-in mt-16">
      <h2 class="font-serif text-2xl font-semibold mb-6">{t(locale, 'geology.heading')}</h2>
      <p class="text-primary/50 dark:text-dark-text/50 mb-8">
        {t(locale, 'geology.subtitle')}
      </p>
      <div class="space-y-4">
        {publicacoesGeologia.map(item => (
          <div class="py-4 border-b border-gray-200 dark:border-gray-800">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-1">
              <div>
                <h3 class="font-medium">{item.nome}</h3>
                <p class="text-sm text-primary/50 dark:text-dark-text/50">{item.tipo} Â· {item.descricao}</p>
              </div>
              {item.link && (
                <a
                  href={item.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm text-accent dark:text-blue-400 hover:opacity-70 transition-opacity shrink-0"
                >
                  {t(locale, 'geology.view')} &rarr;
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
