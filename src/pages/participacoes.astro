<BaseLayout title="Participações - Caio Leta" description="Palestras, painéis, podcasts e publicações de Caio Leta.">
  <section class="max-w-3xl mx-auto px-6 pt-16 md:pt-24 pb-20">
    <div class="fade-in">
      <h1 class="font-serif text-3xl md:text-4xl font-bold mb-4">Participações</h1>
      <p class="text-primary/50 dark:text-dark-text/50 mb-12">
        Palestras, painéis, podcasts e publicações.
      </p>
    </div>

    <!-- Palestras -->
    <div class="fade-in mb-14">
      <h2 class="font-serif text-2xl font-semibold mb-6">Palestras</h2>
      <div class="space-y-4">
        {palestras.map(item => (
          <div class="py-4 border-b border-gray-200 dark:border-gray-800">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-1">
              <div>
                <h3 class="font-medium">{item.titulo}</h3>
                <p class="text-sm text-primary/50 dark:text-dark-text/50">{item.evento}</p>
              </div>
              {item.link && (
                <a
                  href={item.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm text-accent dark:text-blue-400 hover:opacity-70 transition-opacity shrink-0"
                >
                  Assistir &rarr;
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Painéis -->
    <div class="fade-in mb-14">
      <h2 class="font-serif text-2xl font-semibold mb-6">Painéis e moderações</h2>
      <div class="space-y-4">
        {paineis.map(item => (
          <div class="py-4 border-b border-gray-200 dark:border-gray-800">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-1">
              <div>
                <h3 class="font-medium">{item.titulo}</h3>
                <p class="text-sm text-primary/50 dark:text-dark-text/50">{item.tipo} · {item.evento}</p>
              </div>
              {item.link && (
                <a
                  href={item.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm text-accent dark:text-blue-400 hover:opacity-70 transition-opacity shrink-0"
                >
                  Assistir &rarr;
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Podcasts -->
    <div class="fade-in mb-14">
      <h2 class="font-serif text-2xl font-semibold mb-6">Podcasts</h2>
      <div class="space-y-4">
        {podcasts.map(item => (
          <div class="py-4 border-b border-gray-200 dark:border-gray-800">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-1">
              <div>
                <h3 class="font-medium">{item.nome}</h3>
                <p class="text-sm text-primary/50 dark:text-dark-text/50">{item.descricao}</p>
              </div>
              <a
                href={item.link}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-accent dark:text-blue-400 hover:opacity-70 transition-opacity shrink-0"
              >
                Ver canal &rarr;
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Publicações -->
    <div class="fade-in mb-14">
      <h2 class="font-serif text-2xl font-semibold mb-6">Publicações</h2>
      <div class="space-y-4">
        {publicacoes.map(item => (
          <div class="py-4 border-b border-gray-200 dark:border-gray-800">
