---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import { getLocaleFromUrl, getHtmlLang, getAlternateUrl, t } from '../i18n/utils';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const locale = getLocaleFromUrl(Astro.url);
const htmlLang = getHtmlLang(locale);
const alternateLocale = locale === 'pt' ? 'en' : 'pt';
const alternateHreflang = getHtmlLang(alternateLocale);
const alternateUrl = new URL(getAlternateUrl(Astro.url, alternateLocale), Astro.site);

const {
  title,
  description = t(locale, 'site.description'),
  ogImage = '/og-default.png',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang={htmlLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="canonical" href={canonicalURL} />
    <link rel="alternate" hreflang={alternateHreflang} href={alternateUrl} />
    <link rel="alternate" hreflang={htmlLang} href={canonicalURL} />

    <title>{title}</title>
    <meta name="description" content={description} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.site)} />

    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      })();
      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    <Header locale={locale} />
    <main class="flex-1 pt-20">
      <slot />
    </main>
    <Footer />

    <script>
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
            }
          });
        },
        { threshold: 0.1 }
      );

      document.querySelectorAll('.fade-in').forEach(el => observer.observe(el));
    </script>
  </body>
</html>
